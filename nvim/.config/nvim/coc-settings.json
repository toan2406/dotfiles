{
  "coc.preferences.hoverTarget": "echo",
  "javascript.suggestionActions.enabled": false,
  "javascript.validate.enable": false,
  "languageserver": {
    "solargraph": {
      "command": "solargraph",
      "args": ["stdio"],
      "filetypes": ["ruby"]
    },
    "rust": {
      "command": "rls",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    }
  },
  "markdownlint.onOpen": true,
  "markdownlint.onChange": false,
  "markdownlint.config": {
    "default": true,
    "line_length": false
  }
}
